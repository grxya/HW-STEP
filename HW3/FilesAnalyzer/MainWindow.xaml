<Window x:Class="FilesAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilesAnalyzer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="22">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.14*"/>
            <RowDefinition/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom">Source: </Label>
        <Label Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom">Destination:</Label>

        <TextBox Name="SourceTextBox"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" TextWrapping="Wrap"/>
        <TextBox Name="DestinationTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" TextWrapping="Wrap" />

        <Button Name="MoveButton" Grid.Row="2" Grid.Column="0" Click="MoveButton_Click">Move files</Button>
        <CheckBox Name="ReportCheckBox" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">Generate the Report</CheckBox>
    </Grid>
</Window>
